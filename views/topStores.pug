extends layout 

block content
    .inner
        if stores && stores.length
            table.table
                thead 
                    td photo 
                    td ranking 
                    td name
                    td reviews 
                    td Average Rating
                each store, i in stores 
                    tr
                        td 
                            a(href=`/store/${store.slug}`) 
                                img(width=200 src=`/uploads/${store.photo || 'store.png'}` alt=store.name)
                        td #{i + 1}
                        td: a(href=`/store/${store.slug}`)= store.name
                        td= (store.reviews && store.reviews.length) || 0
                        td #{Math.round(store.averageRating * 10) / 10} / 5
        else
            p No stores found.